    "eslint-tinker": "^0.5.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "fs-extra": "^7.0.0",
    "gh-pages": "^1.0.0",
    "js-beautify": "^1.7.5",
    "npm-run-all": "^4.0.2",
    "optimize-css-assets-webpack-plugin": "5.0.0",
    "pre-commit": "^1.2.2",
    "rc-drawer-menu": "^1.1.0",
    "rc-queue-anim": "^1.3.1",
    "rc-scroll-anim": "^2.0.2",
    "rc-tween-one": "^2.2.3",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "shelljs": "^0.8.2",
    "style-loader": "^0.21.0",
    "stylelint": "^9.4.0",
    "stylelint-config-standard": "^18.2.0",
    "webpack": "3.12.0"
  },
  "scripts": {
    "precommit": "npm run lint-staged",
    "start": "rm -rf _site && cp -a static _site/ && cross-env NODE_ENV=development bisheng start -c ./site/bisheng.config.js",
    "bisheng-build": "cross-env NODE_ENV=production bisheng build -c ./site/bisheng.config.js",
    "build-site": "rm -rf _site && npm run bisheng-build && cp -a static/* _site/",
    "gh-pages": "gh-pages -d _site",
    "site": "cross-env NODE_OPTIONS=--max-old-space-size=4096 npm run build-site && npm run gh-pages",
    "clean": "rm -rf node_modules",
    "lint": "npm run lint:es && npm run lint:style && npm run lint:demo",
    "lint:es": "eslint ./ --ext '.js,.jsx'",
    "lint-staged:js": "eslint --ext .js",
    "lint:style": "stylelint \"site/**/*.less\" --syntax less",
    "lint:demo": "cross-env RUN_ENV=DEMO eslint ./ --ext '.md' -c ./.eslintrc.js",
    "test": "npm run lint",
    "lint-staged": "lint-staged",
    "prettier": "prettier --write ./site/**/**/**"
  },
  "lint-staged": {
    "**/*.{js,jsx,less}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,jsx}": "npm run lint-staged:js",
    "**/*.less": "stylelint --syntax less"
  },
  "pre-commit": [
    "precommit"
  ]
}
