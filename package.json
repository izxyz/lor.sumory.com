    "react-github-button": "^0.1.11",
    "react-intl": "^2.4.0",
    "stylelint-config-prettier": "^3.3.0",
    "user": "0.0.0"
  },
  "devDependencies": {
    "antd-tools": "^5.1.4",
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.2.2",
