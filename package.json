    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "bisheng": "^0.28.0",
    "bisheng-plugin-antd": "^0.16.5",
    "bisheng-plugin-description": "^0.1.4",
    "bisheng-plugin-react": "^0.6.3",
    "bisheng-plugin-toc": "^0.4.4",
    "classnames": "^2.2.5",
    "commander": "~2.17.0",
    "concurrently": "^3.5.0",
    "cross-env": "^5.1.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb": "^17.1.0",
